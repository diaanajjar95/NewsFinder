<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsFinder.TextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.NewsFinder.TextAppearance.Bold">
        <item name="fontFamily">@font/cairo_black</item>
        <item name="android:fontFamily">@font/cairo_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewsFinder.TextAppearance.Semibold">
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewsFinder.TextAppearance.Medium">
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="android:fontFamily">@font/cairo_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewsFinder.TextAppearance.Regular">
        <item name="fontFamily">@font/cairo_regular</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.NewsFinder.TextAppearance.Light">
        <item name="fontFamily">@font/cairo_light</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>